{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist/src",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
  },
  "include": [
    "src"
  ]
}