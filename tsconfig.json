{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "paths": {
      "openapi-to-postmanv2": [
        "./src/@types/openapi-to-postmanv2"
      ]
    },
  },
  "include": [
    "src/**/*"
  ]
}